<h3>Post a Review</h3>

<%= form_for [ @item, @review ] do |f| %>
  <p>
    <%= f.label :author_name, "Your Name" %><br/>
    <%= f.text_field :author_name, class: "form-control" %>
  </p>
  <p>
    <%= f.label :body, "Your Review" %><br/>
    <%= f.text_area :body, class: "form-control" %>
  </p>
  <p>
    <%= f.submit 'Leave a Review', class: "btn btn-success pull-right" %>
  </p>
<% end %>
