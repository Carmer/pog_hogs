<%= form_for [:admin, @item] do |f| %>

<%= f.label :category %>
<%= f.collection_select(:category_id, @categories, :id, :title) %><br>

<%= f.label :title %>
<%= f.text_field :title %><br>

<%= f.label :description %>
<%= f.text_field :description %><br>

<%= f.label :image_path %>
<%= f.text_field :image_path %><br>

<%= f.label :price %>
<%= f.text_field :price %><br>

<%= f.label :status %>
<%= f.collection_radio_buttons(:status, @statuses, :first, :first, checked: @item.status) %><br>
<%#= f.collection_radio_buttons(:id, @statuses, :id, :status, checked: @item.status) %><br>

<%= f.submit %>

<% end %>
