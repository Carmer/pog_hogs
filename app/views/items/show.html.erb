
<body data-gr-c-s-loaded="true">



    <!-- Page Content -->
    <div class="container">

        <div class="row">


            <div class="col-md-12">

                <div class="thumbnail">
                    <img class="img-responsive" src="<%= @item.image_path %>" alt="">
                    <div class="caption-full">
                        <h4 class="pull-right">$<%= @item.price %></h4>
                        <h4><a href="#"><%= @item.title %></a>
                        </h4>
                        <p><%= @item.description %></p>
                    </div>
                    <%- if @item.active? -%>
                      <%= button_to "Add to Cart", carts_path(item_id: @item.id), class: "btn btn-success pull-right" %>
                    <% else %>
                    <%= button_to "Item Retired", carts_path(item_id: @item.id), class: "btn btn-danger pull-right", :disabled => true %>
                    <% end %>

                    <%= button_to "Browse #{@item.category.title}", category_path(@item.category), method: :get, class: "btn btn-primary"%>
                    <hr>
                    <%= button_to "Browse All Items", '/items', method: :get, class: "btn btn-primary"%>

                </div>
                <!-- RATINGS AND REVIEWS BELOW -->

                <div class="well">
                  <h3>Reviews (<%= @item.reviews.size %>)</h3>
                  <%= render partial: 'items/review', collection: @item.reviews.reverse %>
                  <%= render partial: 'reviews/form' %>

                    <hr>
                </div>

            </div>

        </div>

    </div>
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
          <div class="row">
            <div class="col-lg-12">
              <p>Copyright &copy; PogHogs 2017</p>
            </div>
          </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>




</body>
