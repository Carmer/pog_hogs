<h1>Welcome to PogHogs</h1>

  <% @categories.each do |category| %>
    <div class="Row">
      <h3 class="category"> <%= category.title %></h3>
          <% category.items.each do |item| %>
            <div class="Column" style="text-align: center;">
              <h2 class="item"><%= link_to  item.title, category_item_path(category, item) %></h2>
              <%= image_tag(item.image_path) %>
              <%= button_to "Add to Cart", carts_path(item_id: item.id), class: "btn btn-danger" %>
            </div>
          <% end %>
    </div>
  <% end %>
