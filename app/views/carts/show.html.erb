<h1>Your Cart</h1>

<% @cart.contents.each do |id, quantity| %>
Item: <%= @items.find(id).title %><br>
Quantity: <%= quantity %><br>
Price <%= @items.find(id).price %><br>
<% end %><br>

<div class="subtotal">
  Subtotal: $<%= @cart.subtotal %><br>
</div>
<%- unless current_user == nil -%>
  <%= button_to "Proceed to checkout"%>
<%- else -%>
  <%= button_to "Log In to Checkout", login_path, method: :get  %>
  <small><%= link_to "Create Account", new_user_path %></small>
  <%- end -%>
