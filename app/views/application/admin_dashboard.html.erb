<h1>Admin Dashboard</h1>

<h3 class="greeting">Welcome <%= current_user.first_name %></h3>
<%= link_to "Edit My Profile", edit_user_path(current_user) %><br>

<h4>Orders</h4>
<% @orders.each do |order| %>
<%= link_to "Invoice Number: #{order.id}", order_path(order)%> <br>
Current Status: <%= order.current_status %><br><br>
<% end %>

<h3>Current Count of Orders by Status</h3>
<p>Ordered: <%= @orders.status_ordered %> </p>
<p>Paid: <%= @orders.status_paid %></p>
<p>Completed: <%= @orders.status_completed %></p>
<p>Cancelled: <%= @orders.status_cancelled %></p>
